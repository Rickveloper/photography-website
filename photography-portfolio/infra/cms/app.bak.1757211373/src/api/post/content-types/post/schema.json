{
    "kind": "collectionType",
    "collectionName": "posts",
    "info": {
        "singularName": "post",
        "pluralName": "posts",
        "displayName": "Post"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "excerpt": {
            "type": "text"
        },
        "cover": {
            "type": "media",
            "multiple": false,
            "required": false
        },
        "body": {
            "type": "richtext"
        },
        "publishedAt": {
            "type": "datetime"
        }
    }
}